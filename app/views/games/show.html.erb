<%= content_tag(:div, data: { controller: 'drag'}, class: 'board') do %>
  <% 10.times do |index| %>
    <%= content_tag(
      :div, '',
      class: 'cell',
      id: "cell-#{index}",
      data: { action: 'dragover->drag#allowDrop drop->drag#drop'},
    ) %>
  <% end %>
  <%= content_tag(
    :div, '',
    id: 'checker-1',
    class: 'checker',
    data: { drag_target: 'checker' },
    draggable: true
  ) %>
<% end %>
