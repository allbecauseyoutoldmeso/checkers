<%= content_tag(:div, data: { controller: 'drag'}) do %>
  <%= content_tag(:div, class: 'flex-direction-column board') do %>
    <% @board.rows.each do |row| %>
      <%= content_tag(:div, class: 'flex-direction-row') do %>
        <% row.each do |cell| %>
          <%= content_tag(
            :div,
            "cell-#{cell.x}-#{cell.y}",
            class: 'cell',
            id: "cell-#{cell.x}-#{cell.y}",
            data: { action: 'dragover->drag#allowDrop drop->drag#drop'},
          ) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= content_tag(
    :div,
    '',
    id: 'checker-1',
    class: 'checker',
    data: { drag_target: 'checker' },
    draggable: true
  ) %>
<% end %>
