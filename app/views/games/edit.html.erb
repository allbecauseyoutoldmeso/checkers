<%= content_tag(:div, data: { controller: 'drag'}) do %>
  <%= content_tag(:div, class: 'flex-direction-column board') do %>
    <% @game.board.rows.each do |row| %>
      <%= content_tag(:div, class: 'flex-direction-row') do %>
        <% row.each do |cell| %>
          <%= render(partial: 'cell', locals: { cell: cell }) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>




<%= form_for @game do |f| %>
  <%= f.fields_for :board do |b| %>
    <%= b.fields_for :cells do |c| %>
      <%= c.number_field :checker_id %>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>
